{
  "expo": {
    "name": "Camy",
    "slug": "camy",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "plugins": [
      [
        "expo-camera",
        {
          "permissions": [
            "CAMERA",
            "AUDIO_RECORDING"
          ],
          "cameraPermission": "Allow Camy to access your camera?",
          "microphonePermission": "Allow Camy to access your microphone?",
          "locationAlwaysAndWhenInUsePermission": "Allow Camy to access this device's location?",
          "locationAlwaysPermission": "Allow Camy to access this device's location?",
          "photoPermission": "Allow Camy to access your photos?",
          "storagePermission": "Allow Camy to access your storage?",
          "notificationPermission": "Allow Camy to send notifications?",
          "isAccessMediaLocationEnabled": true
        }
      ]
    ],
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.grimslab.camy"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "60bef4f5-315a-4ff3-9480-4ccefcbc4462"
      }
    }
  }
}
